
.footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 50px;
  padding: 12px 0;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  color: #000;
}

.footer>view {
  height: 26px;
  line-height: 24px;
  font-size: 12px;
  padding: 0 10px;
  margin-right: 10px;
  border: 1px solid #e4e4e4;
  border-radius: 20px;
  background: #fff;
  float: right;
}
